<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activityBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">


            <LinearLayout
                android:id="@+id/layoutVerifyMobile"
                android:layout_width="@dimen/unit_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.foresight.clickonmoney.customcontroll.TypefacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/unit_16dp"
                    android:gravity="center"
                    android:text="Enter Referral Code and 10 digit \nmobile no for verification"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/unit_16dp"
                    app:fontStyle="regular" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center">

                    <com.foresight.clickonmoney.customcontroll.TypefacedEditText
                        android:id="@+id/etReferralCode"
                        android:layout_width="144dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_register"
                        android:focusable="true"
                        android:hint="Referral Code"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLength="10"
                        android:nextFocusForward="@+id/etMobileVerify"
                        android:paddingBottom="@dimen/unit_4dp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/black"
                        android:textSize="@dimen/unit_18dp">

                        <requestFocus />
                    </com.foresight.clickonmoney.customcontroll.TypefacedEditText>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/unit_16dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center">

                    <com.foresight.clickonmoney.customcontroll.TypefacedEditText
                        android:id="@+id/etMobileVerify"
                        android:layout_width="144dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_register"
                        android:focusable="true"
                        android:hint="Mobile No"
                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:paddingBottom="@dimen/unit_4dp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/black"
                        android:textSize="@dimen/unit_18dp" />

                </android.support.design.widget.TextInputLayout>

                <com.foresight.clickonmoney.customcontroll.TypedfacedButton
                    android:id="@+id/btnVerify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/unit_24dp"
                    android:background="@drawable/button_selector"
                    android:text="Verify"
                    android:textColor="@android:color/white" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layoutVerifyCode"
                android:layout_width="@dimen/unit_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.foresight.clickonmoney.customcontroll.TypefacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/unit_16dp"
                    android:gravity="center"
                    android:text="Enter verification code"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/unit_16dp"
                    app:fontStyle="regular" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center">

                    <com.foresight.clickonmoney.customcontroll.TypefacedEditText
                        android:id="@+id/etVerificationCode"
                        android:layout_width="144dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_register"
                        android:focusable="true"
                        android:hint="Verification Code"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:maxLength="6"
                        android:paddingBottom="@dimen/unit_4dp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/black"
                        android:textSize="@dimen/unit_18dp" />

                </android.support.design.widget.TextInputLayout>

                <com.foresight.clickonmoney.customcontroll.TypedfacedButton
                    android:id="@+id/btnDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/unit_24dp"
                    android:background="@drawable/button_selector"
                    android:text="Done"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutPart1"
                android:layout_width="@dimen/unit_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="288dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/unit_8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/unit_0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/unit_8dp"
                            android:paddingRight="@dimen/unit_8dp"
                            android:paddingTop="@dimen/unit_8dp">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="true"
                                android:focusableInTouchMode="true">

                                <com.foresight.clickonmoney.customcontroll.TypefacedEditText
                                    android:id="@+id/etName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/et_register"
                                    android:focusable="true"
                                    android:hint="First Name"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:nextFocusForward="@+id/etEmail"
                                    android:paddingBottom="@dimen/unit_4dp"
                                    android:singleLine="true"
                                    android:textColor="@android:color/black"
                                    android:textColorHint="@android:color/black"
                                    android:textSize="@dimen/unit_18dp" />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/unit_4dp"
                                android:focusable="true"
                                android:focusableInTouchMode="true">

                                <com.foresight.clickonmoney.customcontroll.TypefacedEditText
                                    android:id="@+id/etRefCode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/et_register"
                                    android:editable="false"
                                    android:enabled="false"
                                    android:focusable="true"
                                    android:hint="Referral Code"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:nextFocusForward="@+id/etEmail"
                                    android:paddingBottom="@dimen/unit_4dp"
                                    android:singleLine="true"
                                    android:textColor="@android:color/black"
                                    android:textColorHint="@android:color/black"
                                    android:textSize="@dimen/unit_18dp" />

                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imgUser"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:background="@drawable/register_image_border"
                            android:padding="@dimen/unit_8dp" />
                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/unit_4dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true">

                        <com.foresight.clickonmoney.customcontroll.TypefacedEditText
                            android:id="@+id/etMobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/et_register"
                            android:editable="false"
                            android:enabled="false"
                            android:focusable="true"
                            android:hint="Mobile"
                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:paddingBottom="@dimen/unit_4dp"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black"
                            android:textSize="@dimen/unit_18dp" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/unit_4dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true">

                        <com.foresight.clickonmoney.customcontroll.TypefacedEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/et_register"
                            android:focusable="true"
                            android:hint="Email"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:nextFocusForward="@+id/etPassword"
                            android:paddingBottom="@dimen/unit_4dp"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black"
                            android:textSize="@dimen/unit_18dp" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/layoutPwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/unit_4dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true">

                        <com.foresight.clickonmoney.customcontroll.TypefacedEditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/et_register"
                            android:focusable="true"
                            android:hint="Password"
                            android:maxLength="16"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:nextFocusForward="@+id/etCnfPassword"
                            android:paddingBottom="@dimen/unit_4dp"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black"
                            android:textSize="@dimen/unit_18dp" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/layoutCnfPwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/unit_4dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true">

                        <com.foresight.clickonmoney.customcontroll.TypefacedEditText
                            android:id="@+id/etCnfPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/et_register"
                            android:focusable="true"
                            android:hint="Confirm Password"
                            android:imeOptions="actionDone"
                            android:maxLength="16"
                            android:inputType="textPassword"
                            android:nextFocusForward="@+id/etPassword"
                            android:paddingBottom="@dimen/unit_4dp"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black"
                            android:textSize="@dimen/unit_18dp" />

                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/unit_24dp"
                        android:orientation="horizontal">


                        <com.foresight.clickonmoney.customcontroll.TypedfacedButton
                            android:id="@+id/btnRegister"
                            android:layout_width="@dimen/unit_0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:background="@drawable/button_selector"
                            android:text="Register"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

    </ScrollView>
</LinearLayout>