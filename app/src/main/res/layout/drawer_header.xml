<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/unit_168dp"
    android:background="@drawable/header"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/navDrawerHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/unit_16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/unit_0dp"
            android:layout_weight="1">

            <com.foresight.clickonmoney.customcontroll.CircleImageView
                android:id="@+id/imageViewUser"
                android:layout_width="@dimen/unit_64dp"
                android:layout_height="@dimen/unit_64dp"
                android:layout_alignParentTop="true"
                android:src="@color/activityBackground"
                android:visibility="invisible" />
        </LinearLayout>

        <com.foresight.clickonmoney.customcontroll.TypefacedTextView
            android:id="@+id/txtUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/unit_1dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="@dimen/unit_18dp"
            android:textStyle="bold"
            app:fontStyle="bold" />

        <com.foresight.clickonmoney.customcontroll.TypefacedTextView
            android:id="@+id/txtDrawerEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="email@icloud.com"
            android:textColor="@color/white"
            app:fontStyle="regular" />
    </LinearLayout>

</FrameLayout>