<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activityBackground">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="288dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/unit_8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/unit_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/unit_8dp"
                        android:paddingRight="@dimen/unit_8dp"
                        android:paddingTop="@dimen/unit_8dp">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:focusableInTouchMode="true">

                            <com.foresight.clickonmoney.customcontroll.TypefacedEditText
                                android:id="@+id/etName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/et_register"
                                android:focusable="true"
                                android:hint="First Name"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:nextFocusForward="@+id/etEmail"
                                android:paddingBottom="@dimen/unit_4dp"
                                android:singleLine="true"
                                android:textColor="@android:color/black"
                                android:textColorHint="@android:color/black"
                                android:textSize="@dimen/unit_18dp" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/unit_4dp"
                            android:focusable="true"
                            android:focusableInTouchMode="true">

                            <com.foresight.clickonmoney.customcontroll.TypefacedEditText
                                android:id="@+id/etMobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/et_register"
                                android:editable="false"
                                android:enabled="false"
                                android:focusable="true"
                                android:hint="Mobile"
                                android:imeOptions="actionNext"
                                android:inputType="phone"
                                android:maxLength="10"
                                android:paddingBottom="@dimen/unit_4dp"
                                android:singleLine="true"
                                android:textColor="@android:color/black"
                                android:textColorHint="@android:color/black"
                                android:textSize="@dimen/unit_18dp" />

                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgUser"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:background="@drawable/register_image_border"
                        android:padding="@dimen/unit_8dp"
                        android:visibility="gone" />
                </LinearLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/unit_4dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <com.foresight.clickonmoney.customcontroll.TypefacedEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_register"
                        android:focusable="true"
                        android:hint="Email"
                        android:imeOptions="actionDone"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="@dimen/unit_4dp"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/black"
                        android:textSize="@dimen/unit_18dp" />

                </android.support.design.widget.TextInputLayout>



                <com.foresight.clickonmoney.customcontroll.TypedfacedButton
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/unit_24dp"
                    android:background="@drawable/button_selector"
                    android:text="Update"
                    android:textColor="@android:color/white" />

            </LinearLayout>
        </LinearLayout>


    </ScrollView>
</LinearLayout>